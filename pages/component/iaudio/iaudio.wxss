/* pages/component/iaudio.wxss */

.ico {
    width: 80rpx;
    height: 80rpx;
}

.audio-wrapper {
    width: 92%;
    height: 120rpx;
    background-color: ghostwhite;
    border: 1px solid gainsboro;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx;
    margin-top: 20rpx;
    align-items: center;
}

.words {
    text-align: center;
}

.song-name {
    font-size: 20px;
    color: black;
}

.singer {
    font-size: 14px;
    color: gray;
}

.duration {
    color: gray;
    font-size: 20px;
}