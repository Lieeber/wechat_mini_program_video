<view>
    <image class="login-img" mode="widthFix" src="../../resource/images/dsp.jpg"></image>
    <view class="login-from">
        <form bindsubmit='doLogin'>
            <!--账号-->
            <view class="inputView top">
                <image class="nameImage" src="../../resource/images/username.png"></image>
                <label class="inputLabel">账号</label>
                <input name="username" class="inputText" placeholder="请输入账号"  value="{{defaultUserName}}"/>
            </view>
            <!--密码-->
            <view class="inputView">
                <image class="keyImage" src="../../resource/images/password.png"></image>
                <label class="inputLabel">密码</label>
                <input name="password" class="inputText" password="true" placeholder="请输入密码"  value="{{defaultPassword}}" />
            </view>

            <!--按钮-->

            <button class="loginBtn" form-type='submit'>登录</button>
            <view>
                <button class="goRegistBtn" bindtap="goRegistPage">没有账号？点击注册</button>
            </view>
        </form>
    </view>
</view>
